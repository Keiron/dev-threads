---
layout: default
pagination:
    data: profileData
    size: 48
---

<h2 class="sr-only">Profiles</h2>
{%- for profile in pagination.items %}
  <div class="bg-base-100 text-base-content card-bordered card-compact shadow-md rounded mt-[68px]">
    <div class="card-body items-center">
      <a
        href="https://threads.net/@{{ profile.username | url }}"
        target="_blank"
        rel="noopener noreferrer"
        class="inline-block">{% img profile.hd_profile_pic_versions[0].url,
      "profile picture of " + profile.username,
      "180", "",
      "bg-base-100 rounded-full max-w-[120px] -mt-[68px] p-2 mx-2" %}</a>
      <a
        href="https://threads.net/@{{ profile.username }}"
        rel="noopener noreferrer"
        target="_blank"
        class=" btn btn-sm rounded-full btn-neutral font-bold place-self-end -mt-[48px]">
        Follow
      </a>
      <div class="card-body w-full">
        <div class="card-title">
          <h3 class=" w-full text-center text-base-content ">
            <a
              href="https://threads.net/@{{ profile.username | url }}"
              rel="noopener noreferrer"
              class="block text-base-content"
              target="_blank">
              {% if profile.full_name %}
                {{ profile.full_name }}
              {% else %}
                {{ profile.username }}
              {% endif %}
            </a>
            <small class="">
              <a
                rel="noopener noreferrer"
                target="_blank"
                class="dark:text-neutral-content text-neutral-600"
                href="https://threads.net/@{{ profile.username | url }}">@{{ profile.username }}</a>
            </small>
            {%- if profile.is_private %}
              <small class="is-private">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-6 h-6 inline-block fill-info">
                  <path
                    fill-rule="evenodd"
                    d="M12 1.5a5.25 5.25 0 00-5.25 5.25v3a3 3 0 00-3 3v6.75a3 3 0 003 3h10.5a3 3 0 003-3v-6.75a3 3 0
                      00-3-3v-3c0-2.9-2.35-5.25-5.25-5.25zm3.75 8.25v-3a3.75 3.75 0 10-7.5 0v3h7.5z"
                    clip-rule="evenodd"/>
                </svg>
              </small>
            {%- endif %}
            {%- if profile.is_verified %}
              <small class="is-verified">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  viewBox="0 0 24 24"
                  fill="currentColor"
                  class="w-6 h-6 inline-block fill-accent">
                  <path
                    fill-rule="evenodd"
                    d="M8.603 3.799A4.49 4.49 0 0112 2.25c1.357 0 2.573.6 3.397 1.549a4.49 4.49 0 013.498 1.307 4.491 4.491 0 011.307
                      3.497A4.49 4.49 0 0121.75 12a4.49 4.49 0 01-1.549 3.397 4.491 4.491 0 01-1.307 3.497 4.491 4.491 0 01-3.497 1.307A4.49
                      4.49 0 0112 21.75a4.49 4.49 0 01-3.397-1.549 4.49 4.49 0 01-3.498-1.306 4.491 4.491 0 01-1.307-3.498A4.49 4.49 0 012.25
                      12c0-1.357.6-2.573 1.549-3.397a4.49 4.49 0 011.307-3.497 4.49 4.49 0 013.497-1.307zm7.007 6.387a.75.75 0
                      10-1.22-.872l-3.236 4.53L9.53 12.22a.75.75 0 00-1.06 1.06l2.25 2.25a.75.75 0 001.14-.094l3.75-5.25z"
                    clip-rule="evenodd"/>
                </svg>
              </small>
            {%- endif %}
          </h3>
        </div>
        <p class=" text-base-content ">
          {%- replace profile.biography, '\n', '<br>' %}
        </p>
      </div>
    </div>
  </div>
{%- endfor %}
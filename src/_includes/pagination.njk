{%- if pagination.pages.length > 1 %}
  <div class="flex items-center justify-center px-4 py-3 sm:px-6 mx-auto">
    <div class="flex flex-1 justify-between sm:hidden">
      {% if pagination.href.previous %}
        <a href="{{ pagination.href.previous }}" class="relative inline-flex items-center rounded-md border border-gray-300 bg-white px-4 py-2 text-sm font-medium
                                                                                                                                                                    text-gray-700 hover:bg-gray-50">
          Previous</a>
      {% else %}
        <span class="relative inline-flex items-center rounded-md border border-gray-300 bg-white px-4 py-2 text-sm font-medium
            text-gray-700 hover:bg-gray-50">
          Previous</span>
      {% endif %}
      {% if pagination.href.next %}
        <a href="{{ pagination.href.next }}" class="relative ml-3 inline-flex items-center rounded-md border border-gray-300 bg-white px-4 py-2 text-sm font-medium
                                                                                                                                                                    text-gray-700 hover:bg-gray-50">
          Next</a>
      {% else %}
        <span class="relative inline-flex items-center rounded-md border border-gray-300 bg-white px-4 py-2 text-sm font-medium
            text-gray-700 hover:bg-gray-50">
          Next</span>
      {% endif %}
    </div>
    <div>
      <nav class="join" aria-label="Pagination">
        {% if pagination.href.previous %}
          <a href="{{ pagination.href.previous }}" class="join-item btn">
            <span class="sr-only">Previous</span>
            <svg class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
              <path
                fill-rule="evenodd"
                d="M12.79 5.23a.75.75 0 01-.02 1.06L8.832 10l3.938 3.71a.75.75 0 11-1.04 1.08l-4.5-4.25a.75.75 0 010-1.08l4.5-4.25a.75.75
                  0 011.06.02z"
                clip-rule="evenodd"/>
            </svg>
          </a>
        {% else %}
          <span class="join-item btn btn-disabled">
            <span class="sr-only">Previous</span>
            <svg class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
              <path
                fill-rule="evenodd"
                d="M12.79 5.23a.75.75 0 01-.02 1.06L8.832 10l3.938 3.71a.75.75 0 11-1.04 1.08l-4.5-4.25a.75.75 0 010-1.08l4.5-4.25a.75.75
                  0 011.06.02z"
                clip-rule="evenodd"/>
            </svg>
          </span>
        {% endif %}
        {%- for pageEntry in pagination.pages %}
          <a href="{{ pagination.hrefs[ loop.index0 ] }}" {% if page.url == pagination.hrefs[ loop.index0 ] %} aria-current="page" class="join-item btn btn-active" {% else %} class="join-item btn" {% endif %}>
            {{ loop.index }}</a>
        {%- endfor %}
        {% if pagination.href.next %}
          <a href="{{ pagination.href.next }}" class="join-item btn">
            <span class="sr-only">Next</span>
            <svg class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
              <path
                fill-rule="evenodd"
                d="M7.21 14.77a.75.75 0 01.02-1.06L11.168 10 7.23 6.29a.75.75 0 111.04-1.08l4.5 4.25a.75.75 0 010 1.08l-4.5 4.25a.75.75 0
                  01-1.06-.02z"
                clip-rule="evenodd"/>
            </svg>
          </a>
        {% else %}
          <span class="join-item btn btn-disabled">
            <span class="sr-only">Next</span>
            <svg class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
              <path
                fill-rule="evenodd"
                d="M7.21 14.77a.75.75 0 01.02-1.06L11.168 10 7.23 6.29a.75.75 0 111.04-1.08l4.5 4.25a.75.75 0 010 1.08l-4.5 4.25a.75.75 0
                  01-1.06-.02z"
                clip-rule="evenodd"/>
            </svg>
          </span>
        {% endif %}
      </nav>
    </div>
  </div>
</div>{%- endif %}